!!!
%html
  %head
    / %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= content_for?(:title) ? yield(:title) : "Rails3 Bootstrap Devise Cancan"
    %meta{:content => content_for?(:description) ? yield(:description) : "Rails3 Bootstrap Devise Cancan", :name => "description"}
    = stylesheet_link_tag "application", :media => "all"
    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cuprum", "http://fonts.googleapis.com/css?family=Imprima"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false", "application"
        
    //= csrf_meta_tags
    = yield(:head)
  %body{:class => "#{controller_name} #{action_name}"}
    .container-fluid
      %header.navbar.navbar-fixed-top
        %nav.navbar-inner
          .container
            = render 'layouts/navigation'
      .row-fluid
        .span2.sidebar-container
          -# Sidebar
          = render 'layouts/sidebar'
        .span10.body-container
          -# Content
          = render 'layouts/messages'
          = yield
      %footer
/ #main{:role => "main"}
/   .container
/     .content
/       .row
/         .span12
/ 
/       %footer

